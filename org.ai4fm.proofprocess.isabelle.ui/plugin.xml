<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.ai4fm.proofprocess.isabelle.ui.actions.ExportPProcessToIsabelleHandler"
            description="Export ProofProcess Data to Isabelle"
            id="org.ai4fm.proofprocess.isabelle.ui.exportPProcessToIsabelle"
            name="Export ProofProcess Data">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.ai4fm.proofprocess.ui.PProcessView">
         <separator
               name="org.ai4fm.proofprocess.isabelle.ui.separator"
               visible="true">
         </separator>
         <command
               commandId="org.ai4fm.proofprocess.isabelle.ui.exportPProcessToIsabelle"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="isabelle.eclipse.ui.theoryPerspective">
         <viewShortcut
               id="org.ai4fm.proofprocess.ui.PProcessView">
         </viewShortcut>
         <viewShortcut
               id="org.ai4fm.proofprocess.ui.PProcessGraphView">
         </viewShortcut>
         <view
               id="org.ai4fm.proofprocess.ui.PProcessView"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.ui.views.ContentOutline">
         </view>
         <view
               id="org.ai4fm.proofprocess.ui.PProcessGraphView"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.ui.console.ConsoleView"
               visible="false">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.ai4fm.proofprocess.isabelle.core.patchHandler">
      <handler
            class="org.ai4fm.proofprocess.isabelle.ui.actions.PatchActionHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.ai4fm.proofprocess.isabelle.JudgementTerm"
            class="org.ai4fm.proofprocess.isabelle.ui.term.JudgementTermSelectionSourceAdapter">
         <adapter
               type="org.ai4fm.proofprocess.ui.TermSelectionSourceProvider">
         </adapter>
      </factory>
   </extension>

</plugin>
