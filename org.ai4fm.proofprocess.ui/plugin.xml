<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.ai4fm.proofprocess.ui"
            name="Proof Process">
      </category>
      <view
            allowMultiple="true"
            category="org.ai4fm.proofprocess.ui"
            class="org.ai4fm.proofprocess.ui.views.PProcessView"
            icon="icons/proofprocess.png"
            id="org.ai4fm.proofprocess.ui.PProcessView"
            name="Proof Process"
            restorable="true">
      </view>
      <view
            allowMultiple="true"
            category="org.ai4fm.proofprocess.ui"
            class="org.ai4fm.proofprocess.ui.views.PProcessGraphView"
            icon="icons/proofprocess.png"
            id="org.ai4fm.proofprocess.ui.PProcessGraphView"
            name="Proof Process Graph"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.ai4fm.proofprocess.ui.trackProofProcessToggle"
            name="Toggle Proof Process Tracking">
         <state
               class="org.ai4fm.proofprocess.ui.actions.TrackPProcessState"
               id="toggleState">
         </state>
         <defaultHandler
               class="org.ai4fm.proofprocess.ui.actions.ToggleHandler">
            <parameter
                  name="org.ai4fm.proofprocess.ui.toggleHandler.commandId"
                  value="org.ai4fm.proofprocess.ui.trackProofProcessToggle">
            </parameter>
         </defaultHandler>
      </command>
      <command
            id="org.ai4fm.proofprocess.ui.trackLatestProofEntryToggle"
            name="Toggle Latest Proof Entry Tracking">
         <state
               class="org.ai4fm.proofprocess.ui.actions.TrackLatestProofEntryState"
               id="toggleState">
         </state>
         <defaultHandler
               class="org.ai4fm.proofprocess.ui.actions.ToggleHandler">
            <parameter
                  name="org.ai4fm.proofprocess.ui.toggleHandler.commandId"
                  value="org.ai4fm.proofprocess.ui.trackLatestProofEntryToggle">
            </parameter>
         </defaultHandler>
      </command>
      <command
            description="Mark Proof Process Features"
            id="org.ai4fm.proofprocess.ui.markFeatures"
            name="Mark Features">
      </command>
      <command
            description="Edit"
            id="org.ai4fm.proofprocess.ui.editElement"
            name="Edit">
      </command>
      <command
            description="Group Selected Proof Steps"
            id="org.ai4fm.proofprocess.ui.groupSteps"
            name="Group Steps">
      </command>
      <command
            description="Ungroup Selected Proof Steps"
            id="org.ai4fm.proofprocess.ui.ungroupSteps"
            name="Ungroup Steps">
      </command>
      <command
            defaultHandler="org.ai4fm.proofprocess.ui.actions.ExportPlainTextHandler"
            description="Export to Plain Text"
            id="org.ai4fm.proofprocess.ui.exportPlainText"
            name="Export to Plain Text">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="org.ai4fm.proofprocess.ui.main.toolbar">
            <command
                  commandId="org.ai4fm.proofprocess.ui.trackProofProcessToggle"
                  icon="icons/proofprocess.png"
                  style="toggle">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.ai4fm.proofprocess.ui.PProcessView">
         <separator
               name="view"
               visible="false">
         </separator>
         <separator
               name="link"
               visible="false">
         </separator>
         <command
               commandId="org.ai4fm.proofprocess.ui.trackLatestProofEntryToggle"
               icon="icons/synced.gif"
               style="toggle">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.ai4fm.proofprocess.ui.PProcessView?after=edit">
         <command
               commandId="org.ai4fm.proofprocess.ui.exportPlainText"
               style="push">
         </command>
         <separator
               name="features"
               visible="true">
         </separator>
         <command
               commandId="org.ai4fm.proofprocess.ui.markFeatures"
               style="push">
         </command>
         <separator
               name="group"
               visible="true">
         </separator>
         <command
               commandId="org.ai4fm.proofprocess.ui.groupSteps"
               icon="icons/ProofSeq.gif"
               style="push">
         </command>
         <command
               commandId="org.ai4fm.proofprocess.ui.ungroupSteps"
               style="push">
         </command>
         <separator
               name="properties"
               visible="true">
         </separator>
         <command
               commandId="org.ai4fm.proofprocess.ui.editElement"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.ai4fm.proofprocess.ui.prefs.PProcessUIPreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.ai4fm.proofprocess.ui.actions.MarkFeaturesHandler"
            commandId="org.ai4fm.proofprocess.ui.markFeatures">
         <enabledWhen>
            <with
                  variable="selection">
               <and>
                  <count
                        value="1">
                  </count>
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <instanceof
                           value="org.ai4fm.proofprocess.ProofElem">
                     </instanceof>
                  </iterate>
               </and>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="org.ai4fm.proofprocess.ui.actions.FeatureDefInfoHandler"
            commandId="org.ai4fm.proofprocess.ui.editElement">
         <activeWhen>
            <with
                  variable="selection">
               <and>
                  <count
                        value="1">
                  </count>
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <instanceof
                           value="org.ai4fm.proofprocess.ProofFeatureDef">
                     </instanceof>
                  </iterate>
               </and>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="org.ai4fm.proofprocess.ui.actions.IntentInfoHandler"
            commandId="org.ai4fm.proofprocess.ui.editElement">
         <activeWhen>
            <with
                  variable="selection">
               <and>
                  <count
                        value="1">
                  </count>
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <instanceof
                           value="org.ai4fm.proofprocess.Intent">
                     </instanceof>
                  </iterate>
               </and>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="org.ai4fm.proofprocess.ui.actions.GroupStepsHandler"
            commandId="org.ai4fm.proofprocess.ui.groupSteps">
         <activeWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <instanceof
                        value="org.ai4fm.proofprocess.ProofElem">
                  </instanceof>
               </iterate>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="org.ai4fm.proofprocess.ui.actions.UngroupStepsHandler"
            commandId="org.ai4fm.proofprocess.ui.ungroupSteps">
         <activeWhen>
            <with
                  variable="selection">
               <and>
                  <count
                        value="1">
                  </count>
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <instanceof
                           value="org.ai4fm.proofprocess.ProofSeq">
                     </instanceof>
                  </iterate>
               </and>
            </with>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="org.ai4fm.proofprocess.ui.internal.PProcessUIStartup">
      </startup>
   </extension>

</plugin>
