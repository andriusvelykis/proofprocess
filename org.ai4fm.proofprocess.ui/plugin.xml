<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.ai4fm.proofprocess.ui"
            name="Proof Process">
      </category>
      <view
            allowMultiple="true"
            category="org.ai4fm.proofprocess.ui"
            class="org.ai4fm.proofprocess.ui.views.PProcessView"
            icon="icons/proofprocess.png"
            id="org.ai4fm.proofprocess.ui.PProcessView"
            name="Proof Process"
            restorable="true">
      </view>
      <view
            allowMultiple="true"
            category="org.ai4fm.proofprocess.ui"
            class="org.ai4fm.proofprocess.ui.views.PProcessGraphView"
            icon="icons/proofprocess.png"
            id="org.ai4fm.proofprocess.ui.PProcessGraphView"
            name="Proof Process Graph"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.ai4fm.proofprocess.ui.trackProofProcessToggle"
            name="Toggle Proof Process Tracking">
         <state
               class="org.ai4fm.proofprocess.ui.actions.TrackProofProcessState"
               id="toggleState">
         </state>
         <defaultHandler
               class="org.ai4fm.proofprocess.ui.actions.ToggleHandler">
            <parameter
                  name="org.ai4fm.proofprocess.ui.toggleHandler.commandId"
                  value="org.ai4fm.proofprocess.ui.trackProofProcessToggle">
            </parameter>
         </defaultHandler>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="org.ai4fm.proofprocess.ui.main.toolbar">
            <command
                  commandId="org.ai4fm.proofprocess.ui.trackProofProcessToggle"
                  icon="icons/proofprocess.png"
                  style="toggle">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
