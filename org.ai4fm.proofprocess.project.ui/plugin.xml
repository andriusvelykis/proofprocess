<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="Upgrade and Compact Proof Process Repository"
            id="org.ai4fm.proofprocess.project.ui.upgradeRepo"
            name="Upgrade/Compact Proof Process Repository">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.ai4fm.proofprocess.project.ui.actions.UpgradeRepoHandler"
            commandId="org.ai4fm.proofprocess.project.ui.upgradeRepo">
         <activeWhen>
            <with
                  variable="selection">
               <and>
                  <count
                        value="1">
                  </count>
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <instanceof
                           value="org.eclipse.core.resources.IProject">
                     </instanceof>
                  </iterate>
               </and>
            </with>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu?after=additions">
         <command
               commandId="org.ai4fm.proofprocess.project.ui.upgradeRepo"
               icon="icons/upgrade-repo.gif"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=org.ai4fm.proofprocess.ui.main.toolbar">
         <toolbar
               id="org.ai4fm.proofprocess.project.ui.main.toolbar">
            <command
                  commandId="org.ai4fm.proofprocess.project.ui.upgradeRepo"
                  icon="icons/upgrade-repo.gif"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
